<!--daren.wxml-->
<include src="../header/header.wxml"/>
<view class="container">
  <view class='yy'>
    <text>{{classname}}</text>
    <text>{{description}}</text>
  </view>
  <view class='ddk_02' catchtap="showsddk">
      <image src='{{dpic}}' mode="widthFix"></image>
    </view>
  <view class='consulting'>
    <view class='center'>
    <view class='consulting_bg'><image src='../../images/ddk_03.jpg' mode='widthFix'></image></view>

    

    <form bindsubmit="formSubmit">
      <input name="nickname" value="" placeholder="请输入您的姓名（必填）" />
      <input name="contact" value="" placeholder="请输入您的电话（必填）" />
      <input name="sex" value="" placeholder="请输入您的性别" />
      <textarea name="content"  value="" placeholder="请输入您的问题（必填）"></textarea>
      <button form-type="submit">立即提交</button>
    </form>

  </view>
  </view>


  <view class='consulting_03'>
    <view class='center'>
      <view class='consulting_bg'><image src='../../images/ddk_06.jpg' mode='widthFix'></image></view>
    </view>
  </view>
  <view class='wash'>
    <view class='center' wx:for="{{list}}" wx:key="{{item.id}}">
	
      <view class='wash_01'>
        <text>{{item.id}}</text>
        <text>{{item.content}}</text>
      </view>
      <view class='wash_02'>
        <image src='{{item.picurl}}' mode='widthFix'></image>
      </view>

    </view>
  </view>

  <view class='xzcds'>
    <text>选择穿搭师</text>
  </view>

</view>
<include src="../footer/footer.wxml"/>