.newsshow{margin-top: 20px}
.newsshow text{display: block}
.newsshow text:nth-of-type(1){font-size: 18px;width: 100%;margin-bottom: 5px;margin-top: 10px;text-align: center;}
.newsshow text:nth-of-type(2){color: #999;border-bottom:1px #ddd solid;border-top:1px #ddd solid;padding: 5px 0;margin:5px 0;font-size: 13px;text-align: center}
.newsshow text:nth-of-type(3){font-size: 13px;color: #666;line-height: 24px}
.newsshow image{width: 100%;}