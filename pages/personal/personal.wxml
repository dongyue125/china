<!--daren.wxml-->
<include src="../header/header.wxml"/>
<view class="container">

  <view class='productshow head_portrait'>
    <view class='center'>
      <image src='{{avatarurl}}'></image>
      <view class='head_portrait_01'>
        <text>{{nickname}}</text>
        <text>海浪无声将夜幕深深淹没漫过天空尽头的角落大鱼在梦境的缝隙里游过</text>
      </view>
    </view>
  </view>

  <view class='productshow the_order'>
    <text catchtap="showorder" data-current="all">全部订单（{{allo}}）</text>
    <text catchtap="showorder" data-current="confirm">待付款（{{confirmo}}）</text>
    <text catchtap="showorder" data-current="payment">待发货（{{payment}}）</text>
    <text catchtap="showorder" data-current="postgoods">待收货（{{postgoods}}）</text>
  </view>

  

  <view class='productshow productshow_03' catchtap="grouporder" data-current="group">
    <view class='center'>
      <text>我的拼团订单</text>
      <icon class="iconfont icon-arrow-right-copy-copy"></icon>
    </view>
  </view>

  <view class='productshow productshow_03' catchtap="showaddress">
    <view class='center'>
      <text>收货地址管理</text>
      <icon class="iconfont icon-arrow-right-copy-copy"></icon>
    </view>
  </view>
  
  <view class='productshow top_up'>
    <text>账户余额</text>
    <text>￥{{money=='' ? "0.00" : money}}</text>
    <button catchtap="showrecharge">充值</button>
  </view>
  
  <view class='productshow top_up'>
    <text>我的名片</text>
	<text></text>
    <button catchtap="showexclusive">查看</button>
  </view>

</view>
<view style='height:54px'></view>
<include src="../footer/footer.wxml"/>