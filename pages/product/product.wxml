<!--daren.wxml-->
<include src="../header/header.wxml"/>
<view class="container">
  <view class='yy'>
    <view class='yy_nav'>
      <rich-text wx:for="{{clist}}" wx:key="{{item.catid}}" class='{{item.catid == cid ? "htz yy_nav_se" : ""}}' catchtap="product" data-id="{{item.catid}}">{{item.cname}}</rich-text>
    </view>
    <text>{{classname}}</text>
    <text>{{message}}</text>
  </view>
  <view class='product'>

    <view class='product_01' catchtap='showproductshow' wx:for="{{list}}" wx:key="{{item.id}}" data-id="{{item.id}}">
      <image src='{{item.picurl}}' mode="widthFix"></image>
      <view class='product_02'>
        <rich-text>{{item.title}}</rich-text>
        <text>￥{{item.price}}</text><text>688人付款</text>
      </view>
    </view>
  </view>
</view>
<include src="../footer/footer.wxml"/>